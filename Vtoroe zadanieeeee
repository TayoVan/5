public class Tayovanroflyyyyyy {

    // metod obchiclenya f(x) rizni usloviyaaaa
    public static double f(double x, double a, double b) {
        // diapazon est ili nett[-1, 3)
        if (x >= -1 && x < 3) {
            return Math.sin(x); // Math.sin sinus schitaett
        }
        // rabotaet li x = 3
        else if (x == 3) {
            double underSqrt = a * x - 2; // corni
            if (underSqrt >= 0) {
                return Math.sqrt(underSqrt); //  Math.sqrt kvadratny corini
            } else {
                throw new IllegalArgumentException("Підкореневий вираз має бути невід'ємним.");
            }
        }
        // diapazon est ili nett opyaaaaaat (3, 5)
        else if (x > 3 && x < 5) {
            return b * x + a; // arifmetika xxxxxx
        }
        // esly ne 'tat diapazonnn (V DIAPAZONE MEGDUUUUUU) prostite crisha edettt
        else {
            throw new IllegalArgumentException("x знаходиться поза допустимим діапазоном.");
        }
    }

    // osnovnoi metod testa functii
    public static void main(String[] args) {
        double x = 3.0;
        double a = 2.0; 
        double b = 1.0; 

        try {
            double result = f(x, a, b);
            System.out.println("f(" + x + ") = " + result);

            // dop primeri functii
            System.out.println("Абсолютне значення -3: " + Math.abs(-3)); // Math.abs
            System.out.println("Максимум між 3 і 5: " + Math.max(3, 5)); // Math.max
            System.out.println("2 у степені 3: " + Math.pow(2, 3)); // Math.pow
            System.out.println("Косинус від π/2: " + Math.cos(Math.PI / 2)); // Math.cos
        } catch (IllegalArgumentException e) {
            System.out.println(e.getMessage());
        }
    }
}
